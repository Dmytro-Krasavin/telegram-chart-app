{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb-base/legacy"
  ],
  "rules": {
    "linebreak-style": "off",
    "max-len": [
      "error",
      155
    ],
    "react/prop-types": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  },
  "parser": "babel-eslint"
}
